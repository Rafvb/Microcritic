body
  font-family "Helvetica Neue", "Lucida Grande", "Arial"
  font-size 13px
  text-stroke 1px rgba(255, 255, 255, 0.1)
  color black
  background-color #f6f6f6
h1, h2
  text-align center
  margin 0
  font-size 22px
  color #343434
h1
  text-shadow 1px 2px 2px #ddd
  font-size 60px
  
a
  color black
  text-decoration none
a:hover
  color #b6b6b6

#main_content
  margin-left auto
  margin-right auto
  width 800px

.movie
  margin 10px 0px
  border-bottom 1px solid #b6b6b6

.movie_details
  position relative
  text-align right
  .movie_details_text
    text-align left
    position absolute
    bottom 0
    font-size 18px
    text-transform uppercase
    .movie_created_at
        display none
    .movie_title
        font-weight bold
        font-size 20px
        text-transform uppercase        
  .movie_img
      width auto
      height 150px
      border 1px solid #9c918f

.reviews
  margin-top 20px
  .review
    margin-bottom 10px
    .review_img
        float left
    .review_details
        border 1px solid #b6b6b6
        margin-left 50px
        padding 5px
        .review_title
            font-weight bold
        .review_author
            color gray